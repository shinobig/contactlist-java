<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>


<BorderPane fx:id="mainBorderPane" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shinobi.Controller">
<top>
    <MenuBar>
        <Menu text="Contacts">
            <MenuItem text="New Contact" onAction="#showNewContactDialog"/>
        </Menu>
    </MenuBar>
</top>
<center>
    <TableView prefHeight="200.0" prefWidth="600.0" fx:id="mainTableView">
        <columns>
            <TableColumn styleClass="tableColumn" text="First Name" fx:id="firstNameColumn" />
            <TableColumn styleClass="tableColumn" text="Last Name" fx:id="lastNameColumn" />
            <TableColumn styleClass="tableColumn" text="Phone Number" fx:id="numberColumn" />
            <TableColumn styleClass="tableColumn" text="Note" fx:id="noteColumn" />
        </columns>

    </TableView>
</center>
</BorderPane>
